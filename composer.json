{
    "name": "acdphp/laravel-multitenancy",
    "description": "Laravel multi-tenancy model scoping and automatic tenancy assignment.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlo Dinopol",
            "email": "carlo.dinopol@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "illuminate/database": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^1.10 || ^2.0",
        "larastan/larastan": "^1.0 || ^2.0 || ^3.0 ",
        "ekino/phpstan-banned-code": "^1.0 || ^2.0 || ^3.0",
        "orchestra/testbench": "^7.0 || ^8.0 || ^9.0 || ^10.0",
        "phpunit/phpunit": "^9.0 || ^10.0 || ^11.0"
    },
    "autoload": {
        "psr-4": {
            "Acdphp\\Multitenancy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Acdphp\\Multitenancy\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Acdphp\\Multitenancy\\TenancyServiceProvider"
            ],
            "aliases": {
                "Tenancy": "Acdphp\\Multitenancy\\Facades\\Tenancy"
            },
            "dont-discover": [
                "*"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@prepare"
        ],
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint-fix": [
            "@php vendor/bin/pint"
        ],
        "lint": [
            "@php vendor/bin/pint --test --parallel",
            "@php vendor/bin/phpstan analyse -n --memory-limit=1G"
        ],
        "test": [
            "@php vendor/bin/phpunit"
        ]
    }
}
